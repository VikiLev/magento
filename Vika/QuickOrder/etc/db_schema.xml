<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quickorder" resource="default" engine="innodb" comment="quickorder">
        <column xsi:type="int"
                name="order_id"
                padding="10"
                unsigned="true"
                primary_key = "true"
                nullable="false"
                identity="true"
                comment="Order id"/>
        <column xsi:type="varchar"
                name="name"
                length="32"
                nullable="false"
                comment="Name"/>
        <column xsi:type="int"
                name="phone"
                padding="15"
                nullable="false"
                comment="Phone"/>
        <column xsi:type="varchar"
                name="email"
                length="32"
                nullable="true"
                comment="Email"/>
        <constraint xsi:type="primary"
                    referenceId="PRIMARY">
            <column name="order_id"/>
        </constraint>

    </table>

    <table name="quickorder_status" resource="default" engine="innodb" comment="quickorder_status">
        <column xsi:type="int"
                name="status_id"
                padding="10"
                unsigned="true"
                primary_key = "true"
                nullable="false"
                identity="true"
                comment="Status id"/>
        <constraint xsi:type="primary"
                    referenceId="PRIMARY">
            <column name="status_id"/>
        </constraint>

    </table>

</schema>
